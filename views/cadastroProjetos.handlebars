<h2 class="page-header">Cadastro de Projetos</h2>
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<form method="post" action="/users/register">
   <div class="form-group">
    <label>Dê um nome para o projeto</label>
    <input type="text" class="form-control" placeholder="Contra-capa VEJA" name="titulo">
  </div>
  <div class="form-group">
    <label>Descriçãol.</label>
    <textarea  class="form-control" name="descricao">Simples descrição do projeto no primeiro paragrafo. Detalhes são bem-vindos!"</textarea>
  </div>
   <div class="form-group">
    <label>Investimento</label>
    <input type="string" class="form-control" placeholder="Entre o valor total do contrato." name="email">
  </div>
  <div class="form-group">
    <label>Data Inicio</label>
    <input type="date" class="form-control" placeholder="" name="dataInicio">
  </div>
  <div class="form-group">
    <label>Término previsto em:</label>
    <input type="date" class="form-control" placeholder="" name="dataFim">
  </div>
  <div class="form-group">
    <label>Centro de Custo</label>
    <select name="centroCusto">
      {{#each cCusto}}
        <option value="{{this.id}}">{{this.nome}}</option>
      {{/each}}
    </select>
  <div>

  <button type="submit" class="btn btn-default pull-right">Salvar</button>
</form>
